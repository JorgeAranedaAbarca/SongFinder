<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">


    <ImageView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" android:id="@+id/imgAlbum"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tvAlbumName"
            android:layout_width="wrap_content"
            android:text="Ei"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="25sp" app:layout_constraintStart_toEndOf="@+id/imgAlbum" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tvBandName"
            android:text=" de : Eterna inocencia"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_dark_background"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAlbumName" app:layout_constraintStart_toEndOf="@+id/imgAlbum"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>

    <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/cardview_dark_background"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/view2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgAlbum"/>

</androidx.constraintlayout.widget.ConstraintLayout>

